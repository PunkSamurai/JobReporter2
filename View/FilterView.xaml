<UserControl x:Class="JobReporter2.View.FilterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Start Date:" />
            <DatePicker SelectedDate="{Binding StartDate}" />

            <TextBlock Text="End Date:" />
            <DatePicker SelectedDate="{Binding EndDate}" />

            <TextBlock Text="Shift:" />
            <ComboBox ItemsSource="{Binding Shifts}" SelectedItem="{Binding SelectedShift}" />

            <TextBlock Text="End Type:" />
            <ComboBox ItemsSource="{Binding EndTypes}" SelectedItem="{Binding SelectedEndType}" />

            <TextBlock Text="Connection:" />
            <ComboBox ItemsSource="{Binding Connections}" SelectedItem="{Binding SelectedConnection}" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="Apply" Command="{Binding ApplyCommand}" Width="80" />
                <Button Content="Cancel" Command="{Binding CancelCommand}" Width="80" Margin="10,0,0,0" />
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
